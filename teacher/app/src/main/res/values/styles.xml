<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="ThemeOverlay.Material3.Button" />
    <style name="Base.Widget.AppCompat.ProgressBar." parent="Widget.Material3.CircularProgressIndicator.Small" />



    <style name="TextAppearance" parent="android:TextAppearance" />

    <style name="TextAppearance.H1">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.H1Profile">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.H2Profile">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.H3">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.TextField" parent="TextAppearance"/>

    <style name="TextAppearance.TextField.Hint">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Button.Start">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Base.Widget.AppCompat.ProgressBar.ProgressBarButton">
    <item name="color">@color/white</item>
    </style>

    <style name="TextAppearance.H2">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">20sp</item>
        <item name="android:textColor">@color/name_clothes</item>
    </style>

    <style name="TextAppearance.Error">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">22sp</item>
        <item name="android:textColor">@color/error_text</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_dialog</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

</resources>