<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".details.DetailsNewsFragment">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/text_color_settings" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="330dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="102dp"
        android:src="@drawable/example_news_det1_0" />

    <TextView
        android:id="@+id/textTitleDetals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        android:gravity="end"
        android:text="Man Utd manager is unhappy that the team constantly filed for Ronaldo in the match against Aston Villa"
        android:textColor="@color/background"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/back_pressed_news" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="364dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="302dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/img_3" />

</FrameLayout>