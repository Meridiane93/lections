<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="155dp"
        android:layout_marginTop="15dp"
        android:clipToPadding="false"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textTitleMatchesFootball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Premier League"
                android:textColor="@color/text_color_settings"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textDateMatchesFootball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="12 November 2022  \n 14:30"
                android:textColor="@color/text_color_settings"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textTitleMatchesFootball" />

            <ImageView
                android:id="@+id/imMatcheFootball1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="34dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/example_notes1" />

            <ImageView
                android:id="@+id/imMatchesFootball2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/example_notes1_1" />

            <TextView
                android:id="@+id/textImMatchesFootball1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="Manchester \n City"
                android:textColor="@color/pressed_button_matches"
                app:layout_constraintEnd_toEndOf="@+id/imMatcheFootball1"
                app:layout_constraintStart_toStartOf="@+id/imMatcheFootball1"
                app:layout_constraintTop_toBottomOf="@+id/imMatcheFootball1" />

            <TextView
                android:id="@+id/textImMatchesFootball2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Brendford"
                android:textColor="@color/pressed_button_matches"
                app:layout_constraintEnd_toEndOf="@+id/imMatchesFootball2"
                app:layout_constraintStart_toStartOf="@+id/imMatchesFootball2"
                app:layout_constraintTop_toBottomOf="@+id/imMatchesFootball2" />

            <Button
                android:id="@+id/bt_coefficien_fotballs2"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bt_coefficient"
                android:text="17.10"
                android:textColor="@color/background"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textImMatchesFootball2"
                app:layout_constraintStart_toStartOf="@+id/textImMatchesFootball2"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/bt_coefficien_fotballs"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bt_coefficient"
                android:text="8.50"
                android:textColor="@color/background"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/bt_coefficien_fotball1"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bt_coefficient"
                android:text="1.14"
                android:textColor="@color/background"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textImMatchesFootball1"
                app:layout_constraintStart_toStartOf="@+id/textImMatchesFootball1"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="19dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_favorites_false" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>